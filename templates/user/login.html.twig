{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="panel panel-default my-5 d-flex justify-content-center flex-column">
					<div class="panel-heading">
						<h3 class="panel title text-center">Veuillez vous connecter</h3>
					</div>
					<div class="panel-body">
						<form action="{{path('loginUser')}}" method="POST">
							<fieldset>
								<div class="form-group">
									<input type="email" name="_email" id="inputEmail" class="form-control" placeholder="Votre e-mail" required autofocus value="{{lastUserName}}">
								</div>
								<div class="form-group">
									<input type="password" class="form-control" placeholder="Mot de passe" required name="_password">
								</div>

								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

								
								<button class="col-12 btn btn-colorPrimary shadow btn-lock text-center">
									Me connecter
								</button>								
								<a href="{{ path('creatUser')}}" class="col-12 my-5 btn btn-colorPrimary shadow btn-lock text-center">
									S'inscrire
								</a>
								{% if error %}
									<div class="alert alert-warning mt-5 text-center">
										<p>Authentification echou√©e</p>
									</div>
								{% endif %}
							</fieldset>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
